pipeline {
  agent any
  stages {
    stage("pytest") {
      steps {
        sh """
          docker build -t pytest-project .
        """
      }
    }
    stage("pytest") {
      steps {
        sh """
          docker run -rm pytest-project 
        """
      }
    }
    stage('Unit Test') {
      steps {
        sh '.\\\\Scripts\\\\UnitTest.bat'
        junit '*.xml'
      }
    }
    stage('VI BUILD') {
      steps { 
        sh '.\\\\Scripts\\\\Build.bat'
      }
    }
  }
}