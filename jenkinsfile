pipeline {
  agent any
  stages {
    stage("pytest build") {
      steps {
        bat """
          docker build -t pytest-project .
        """
      }
    }
    stage('Unit Test') {
      steps {
        bat 'C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\Vipe_system_test\\Scripts\\UnitTest.bat'
